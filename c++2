#include <iostream> /*call the input and output library */
using namespace std;/* in the program generally use the command */ 

int main() /* the main function of the program */ 
{                             
	string n; /* define variabies */                   
	int id,y,r=1 ;
	char x; 
	do
    {
	
	cout<<"enter your name: ";cin>>n; /* enter your username */                       
	cout<<"enter your id: ";cin>>id;  /* ID */                       
    cout<<"input A or T or C "; /* specialty */
	cin>>x;
	if(x=='A') /* enter the condition clause */
	{
	cout<<"control"<<endl;}
	else if(x=='T'){
	cout<<"communication"<<endl;}
	else if(x=='C'){
	cout<<"computer"<<endl;}
    cout<<"imput the grade: ";
	cin>>y;
	if((y>=90)&&(y)<=100)
	cout<<"A";
	else if((y>=80)&&(y)<90)
	cout<<"B";
	else if((y>=70)&&(y)<80)
	cout<<"C";
	else if((y>=60)&&(y)<70)
	cout<<"D";
	else if((y>=50)&&(y)<60)
	cout<<"F";
	cout<<endl;
    }while ( r == 1 );
  
	return 0; /* prevent the program from being repeated */ 
}
